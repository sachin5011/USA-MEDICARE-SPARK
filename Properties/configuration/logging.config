[loggers]
keys = root, create_spark_session, validate, ingest

[handlers]
keys = consoleHandler, fileHandler

[formatters]
keys = sampleFormatter

[logger_root]
level = DEBUG
handlers = consoleHandler, fileHandler

[logger_create_spark_session]
level = INFO
handlers = fileHandler
qualname = Create_spark_session
propagate = 0

[logger_validate]
level = WARN
handlers = fileHandler
qualname = Validate
propagate = 0

[logger_ingest]
level = WARN
handlers = fileHandler
qualname = Ingest
propagate = 0

[handler_consoleHandler]
class = StreamHandler
level = DEBUG
formatter = sampleFormatter
args = (sys.stdout,)

[handler_fileHandler]
class = logging.FileHandler
level = DEBUG
formatter = sampleFormatter
args = ("application.log",)

[formatter_sampleFormatter]
format = %(asctime)s - %(name)s - %(levelname)s - %(message)s
